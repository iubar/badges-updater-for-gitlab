/* job: run-badges-updater-for-gitlab */
/* job: badges-updater-for-gitlab */
pipeline {
    agent {
    	docker {   	
    		image 'iubar-maven-alpine'
    		label 'docker'
    		args '-v ${HOME}/.m2:/home/jenkins/.m2:rw,z -v ${HOME}/.sonar:/home/jenkins/.sonar:rw,z'
    	} 
    }
	options {
		ansiColor('xterm')
	}    
	environment {
		MAVEN_ARGS = '--show-version --batch-mode'
		MAVEN_OPTS = '-Dstyle.color=always -Djava.awt.headless=true -Dhttps.protocols=TLSv1.2'
	}    
    stages {
        stage ('Build') {
            steps {
                sh 'mvn $MAVEN_ARGS $MAVEN_OPTS clean package'
            }
        }	
    }
        stage ('Run') {
		environment {
			// @see https://jenkins.io/doc/pipeline/steps/pipeline-utility-steps/#readmavenpom-read-a-maven-project-file
			// Make sure the Pipeline Utility Steps plugin is installed in Jenkins "Manage Plugins". If you do not have the plugin installed you may see an error: java.lang.NoSuchMethodError: No such DSL method 'readMavenPom' .			
			APP_VER = readMavenPom().getVersion()
			APP_NAME = readMavenPom().getArtifactId()
		}        
            steps {
                sh 'ls -la target'
                sh 'cd target && java -jar ${APP_NAME}-jar-with-dependencies.jar'
            }
        }     
post {
        changed {
            sh "curl -H 'JENKINS: Pipeline Hook Iubar' -i -X GET -G ${env.IUBAR_WEBHOOK_URL} -d status=${currentBuild.currentResult} -d project_name='${JOB_NAME}'"
        }
	cleanup {
		cleanWs()
        }		
    }     
}
 
 
